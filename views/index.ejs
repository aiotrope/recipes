<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="shortcut icon" href="#">
  <script src="/javascripts/createRecipe.js" defer></script>
</head>

<body>
  <nav>
    <%- include('./partials/header'); %>
  </nav>
  <div class="container">
    <div class="col">
      <% recipes.forEach(function(element) { %>
        <h2><a href="/recipe/<%= element.name %>"><%- element.name %></a></h2>
        <h3>Ingredients</h3>
        <ul class="nav-mobile">
            <% element.ingredients.map((el)=>{ %>
                <li>
                    <%= el %>
                </li>
                <% }) %>
        </ul>
    
        <h3>Instructions</h3>
        <ul class="nav-mobile" style="padding-left: 1rem;">
            <% element.instructions.map((el)=>{ %>
                <li>
                    <%= el %>
                </li>
                <% }) %>
        </ul>
    
    
        <% })%>
    </div>
    <div class="col">
      <%- include('./partials/createRecipe'); %>
    </div>
  </div>
 
  <p id="glob-recipes-var"><%- JSON.stringify(globRecipesVar) %></p>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

</html>